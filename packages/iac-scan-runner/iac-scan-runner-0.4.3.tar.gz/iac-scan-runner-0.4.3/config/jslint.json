{
  "extends": "standard",
  "env": {
    "browser": true,
    "node": true,
    "mocha": true,
    "jasmine": true
  },
  "globals": {
    "logger": true,
    "config": true,
    "CONFIG": true
  },
  "rules": {
    "no-console": "off",
    "indent": [
      "warn",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "warn",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-multiple-empty-lines": [
      "warn",
      {
        "max": 2,
        "maxEOF": 0
      }
    ],
    "space-before-function-paren": [
      "error",
      "never"
    ],
    "standard/no-callback-literal": "off",
    "object-curly-spacing": [
      "error",
      "never"
    ]
  }
}
