.wrapper {
  width: 100%;
  max-width: 100px;
  min-height: 100%;
  margin: 0 auto;
  &__inner {
    display: flex;
    flex-direction: column;
    align-items: center;
    & > a {
      font-size: 12px;
    }
  }
  & span {
    text-decoration: underline;
  }
}


@media (max-width: 400px) {
  .wrapper {
    display: flex;
    min-height: 100vh;
    &__inner {
      max-width: 100px;
      min-width: 100px;
      flex: 1;
    }
  }
}
