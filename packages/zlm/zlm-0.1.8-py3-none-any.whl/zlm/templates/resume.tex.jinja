%==== TECHNICAL STRENGTHS SECTION ====%
\BLOCK{ if technical }
    \begin{rSection}{Technical Skills}
        \begin{tabular}{ @{} l @{\hspace{1ex}} l }
            \BLOCK{ for section in technical }
                \textbf{\VAR{section.name}}: \VAR{', '.join(section.skills)}\\
            \BLOCK{ endfor }
            \BLOCK{ if certifications }\textbf{Certifications:} 
                \BLOCK{ for certification in certifications }
                    \href{\VAR{certification.link}}{\textbf{\VAR{certification.name}}},
                \BLOCK{ endfor }
            \BLOCK{ endif } 
        \end{tabular}
    \end{rSection}
\BLOCK{ endif } 

% WORK EXPERIENCE SECTION
\BLOCK{ if work }
    \begin{rSection}{Work Experience}
        \BLOCK{ for exp in work }
            \begin{rSubsection}
                \BLOCK{ if exp.link}
                    {\href{\VAR{exp.link}}{\VAR{exp.company}}}
                \BLOCK{else}
                    {\VAR{exp.company}}
                \BLOCK{ endif }
                {\VAR{exp.location}}
                {\normalfont{\VAR{exp.role}}}{\normalfont{\VAR{exp.from} - \VAR{exp.to}}}
                \BLOCK{ for point in exp.description }
                    \item \VAR{point}
                \BLOCK{ endfor }
            \end{rSubsection}
        \BLOCK{ endfor }
    \end{rSection}
\BLOCK{ endif }

% PROJECTS SECTION
\BLOCK{ if projects }
    \begin{rSection}{Projects}
        \BLOCK{ for project in projects}
            \begin{rSubsection}
                \BLOCK{ if project.link}
                    {\href{\VAR{project.link}}{\VAR{project.name}}}
                \BLOCK{else}
                    {\VAR{project.name}}
                \BLOCK{ endif }
                {\normalfont{\VAR{project.from} - \VAR{project.to}}}{}{}
                \BLOCK{ for point in project.description}
                    \item \VAR{point}
                \BLOCK{ endfor }
            \end{rSubsection}
        \BLOCK{ endfor }
    \end{rSection}
\BLOCK{ endif }

